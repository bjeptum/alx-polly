{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "isolatedModules": true,
    "module": "commonjs",
    "target": "ES2017",
    "esModuleInterop": true,
    "allowJs": true,
    "noEmit": true
  },
  "include": [
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "jest.setup.ts"
  ]
}


